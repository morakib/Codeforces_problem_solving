#include<bits/stdc++.h>
using namespace std;
int main(){
	int n;
	cin>>n;
	vector<pair<int,int>> movies;
	for(int i=0;i<n;i++){
		int x,y;
		cin>>x>>y;                      
		movies.push_back({y,x});        //pair e first element sort hoi tai age y jeta ending time seta pushback korbo
	}
	sort(movies.begin(),movies.end());
	int start=movies[0].first;
	int watched=1;
	for(int i=1;i<n;i++){
		if(movies[i].second>=start){
			start=movies[i].first;
			watched++;
		}
	}
	cout<<watched<<"\n";
return 0;
}
