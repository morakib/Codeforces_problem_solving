#include<bits/stdc++.h>
using namespace std;
 
int main(){
 
    string s;
    cin>>s;
 
        if(s[0]>='A'&&s[0]<='Z'){
        cout<<s<<endl;
        }
        else{
            cout<<(char)toupper(s[0]);
            for(int i=1;i<s.size();i++){
            cout<<s[i];
            }
        }
}
